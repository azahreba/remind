{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.1",

  "default_locale": "en",

  "icons": {
    "16": "rm_icon.png",
    "128": "rm_icon.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "rm_icon.png",
      "38": "rm_icon.png"
    },
    "default_title": "ReMind",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["rm_es.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "rm_options.html",
    "chrome_style": true
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "bookmarks",

    "clipboardRead",
    "clipboardWrite",

    "contentSettings",
    "cookies",

    "debugger",
    "idle",
    "management",

    "pageCapture",
    "topSites",
    "webNavigation",

    "storage",
    "notifications"
  ],

  "omnibox": {
    "keyword": "rm"
  },

  "web_accessible_resources": [
    "rm_icon.png"
  ]
}
